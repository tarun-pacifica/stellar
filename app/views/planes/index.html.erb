<script id="flight_creator_template" type="text/x-handlebars-template">
  <h1>Stellar Airlines</h1>
  <input name="call_sign" id="call_sign" type="text" autofocus="true" placeholder="CALLSIGN"><br>
  <input name="origin" id="origin" type="text" placeholder="ORIGIN"><br>
  <input name="destination" id="destination" type="text" placeholder="DESTINATION"><br>
  <select name="plane_type" id="plane_type">
    {{#each planes}}
    <option value="{{this.id}}">{{this.name}}</option>
    {{/each}}
  </select><br>
  <input name="date_departed" id="date_departed" type="date"><br>
  <input name="time_departed" id="time_departed" type="time"><br>
  <input name="date_arrived" id="date_arrived" type="date"><br>
  <input name="time_arrived" id="time_arrived" type="time"><br>
  <input type="submit" id="create_flight" value="Create Flight"><br>
  <div id="flight_table">
    <div>
      <h1>Flight Creator</h1>
      <h2 id="flight_name">Name?</h2>
    </div>
    <div id="flight_viewer">
      <table>
        <tr>
          <th>call_sign</th>
          <th>origin</th>
          <th>destination</th>
          <th>plane type</th>
          <th>date_departed</th>
          <th>time_departed</th>
          <th>date_arrived</th>
          <th>time_arrived</th>
        </tr>
      {{#each flights}}
        <tr>
          <td>{{this.call_sign}}</td>
          <td>{{this.origin}}</td>
          <td>{{this.destination}}</td>
          <td>{{this.plane.name}}</td>
          <td>{{this.date_departed}}</td>
          <td>{{this.time_departed}}</td>
          <td>{{this.date_arrived}}</td>
          <td>{{this.time_arrived}}</td>
        </tr>
      {{/each}}
      </table>
    </div>
  </div>
</script>

<script id="passenger_creator_template" type="text/x-handlebars-template">
  <h1>Passenger Creator</h1>
  <div>
    <input type="text" autofocus="true" name="passenger_name" id="passenger_name" placeholder="Passenger Name">
    <input type="text" name="contact_number" id="contact_number" placeholder="Contact Number">
    <input type="text" name="nationality" id="nationality" placeholder="Nationality">
    <input type="text" name="meal_pref" id="meal_pref" placeholder="Meal Preference">
    <input type="submit" id="passenger_submit" value="New Passenger"></br>
  </div>
  <div id="passenger_viewer">
      <table class="table">
        <tr>
          <th>Name</th>
          <th>contact_number</th>
          <th>Nationality</th>
          <th>Meal Preference</th>
        </tr>
      {{#each passengers}}
        <tr>
          <td><button class="button btn btn-default">{{this.name}}</button></td>
          <td>{{this.contact_number}}</td>
          <td>{{this.nationality}}</td>
          <td>{{this.meal_pref}}</td>
        </tr>
      {{/each}}
      </table>
  </div>
</script>

<script type="text/x-handlebars-template" id="reservations_template">
  <div>
    <h1>RESERVATIONS BOOKER</h1>
    <div>
    <form>
      <h2>ORIGIN</h2>
        <input type="text" autofocus="true" name="origin_name" id="origin_name" placeholder="origin_name">
      <h2>DESTINATION</h2>
        <input type="text" name="destination_name" id="destination_name" placeholder="destination_name"<br>
        <input type="submit" id="flight_query_submit" value="submit">
    </form>
    </div>
    <div id="flight_table">
    <div>
      <h1>Flights</h1>
    </div>
    <div id="flight_viewer">
      <table>
        <thead>
          <tr>
            <th>call_sign</th>
            <th>origin</th>
            <th>destination</th>
            <th>plane type</th>
            <th>date_departed</th>
            <th>time_departed</th>
            <th>seats_available</th>
            <th>ID</th>
          </tr>
        </thead>
        <tbody></tbody>
      </table>
    </div>
    <div id="flight_layout">
    </div>
    <div class="seating">
    </div>
  </div>
</script>
<!-- show matching flights in table -->
<script type="text/x-handlebars-template" id="matching_flights_template">
      {{#each this}}
        <tr class="matchbox20">
          <td><button class="btn btn-default flight">{{this.call_sign}}</button></td>
          <td>{{this.origin}}</td>
          <td>{{this.destination}}</td>
          <td>{{this.plane.name}}</td>
          <td>{{this.date_departed}}</td>
          <td>{{this.time_departed}}</td>
          <td>{{this.seats_free}}</td>
          <td class="id_value">{{this.id}}</td>
          <td></td>
        </tr>
        {{else}}
          <tr>
          <td class="noresults"colspan=7>NO RESULTS FOUND</td>
        </tr>
      {{/each}}
</script>