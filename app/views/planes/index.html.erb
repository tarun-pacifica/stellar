<header>
<div class="index">
<h1>interSTELLAR airlines</h1><br>
<ul class="list-inline">
<li><h6><a rel="stylesheet" href="/">index</a><br></h6></li>
<li><h6><a rel="stylesheet" href="#planes">planes</a><br></h6></li>
<li><h6><a rel="stylesheet" href="#flights">flights</a><br></h6></li>
<li><h6><a rel="stylesheet" href="#passengers">passengers</a><br></h6></li>
<li><h6><a rel="stylesheet" href="#reservations">reservations</a><br></h6></li>
</ul>
</div>
<div class="flight_details">
<h2 class="name"></h3>
<h2 class="seats_name"></h3>
<br>
</div>
</header>
<div id="landing"></div>
<div class="break"></div>
<div id="main"></div>
<script id="plane_creator" type="text/x-handlebars-template">
<div class="plane_inputs">
<h2>Starships</h2>
<table class="table table-striped">
<tr class="danger">
<td class="plane_name">NAME</td>
<td id="rowval"><strong>0</strong></td>
<td id="aival"><strong>1</strong></td>
<td id="seat_count">SEATS</td>
</tr>
</table>
<form>
<label>Name</label>
<input name="name" id="input_name" type="text" autofocus="true"><br>
<label>Rows</label>
<input id="rows" name="rows" type="range".vertical min="0" max="40" value="25" step="5">
<label>Aisles</label>
<input id="aisles"name="aisles" type="range" min="1" max="3" value="1">
<input type="submit" id="create" value="Create Plane"><br>
</form>
<div class="seating"></div>
</div>
<div id="plane_table">
<div id="plane_viewer">
<table class="table table-striped">
<tr>
<th>NAME</th>
<th>ROWs</th>
<th>AISLEs</th>
<th>SEATS</th>
</tr>
{{#each planes}}
<tr>
<td>{{this.name}}</td>
<td>{{this.rows}}</td>
<td>{{this.aisles}}</td>
<td>{{this.seats}}</td>
</tr>
{{/each}}
</table>
</div>
</div>
</script>

