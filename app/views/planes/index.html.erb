<script id="flight_creator_template" type="text/x-handlebars-template">
<div class="flight_input_area">
  <h2>Flights</h2>
  <form class="form-horizontal" role="form">
  <input name="call_sign"class="form-control" id="call_sign" type="text" autofocus="true" placeholder="CALLSIGN"><br>
  <input name="origin"class="form-control" id="origin" type="text" placeholder="ORIGIN"><br>
  <input name="destination"class="form-control" id="destination" type="text" placeholder="DESTINATION"><br>
  <select name="plane_type" id="plane_type" class="form-control">
  {{#each planes}}
  <option value="{{this.id}}">{{this.name}}</option>
  {{/each}}
  </select>
  <input class="form-control" name="date_departed" id="date_departed" type="date">
  <input class="form-control" name="time_departed" id="time_departed" type="time">
  <input class="form-control" name="date_arrived" id="date_arrived" type="date">
  <input class="form-control" name="time_arrived" id="time_arrived" type="time">
  <input class="form-control btn btn-primary" type="submit" id="create_flight" value="Create Flight"></button>
</form>
</div>
<div class="flight_table">
    <table class="table table-striped">
      <tr>
        <th>call_sign</th>
        <th>origin</th>
        <th>destination</th>
        <th>plane type</th>
        <th>date_departed</th>
        <th>time_departed</th>
        <th>date_arrived</th>
        <th>time_arrived</th>
      </tr>
      {{#each flights}}
      <tr>
        <td>{{this.call_sign}}</td>
        <td>{{this.origin}}</td>
        <td>{{this.destination}}</td>
        <td>{{this.plane.name}}</td>
        <td>{{this.date_departed}}</td>
        <td>{{this.time_departed}}</td>
        <td>{{this.date_arrived}}</td>
        <td>{{this.time_arrived}}</td>
      </tr>
      {{/each}}
    </table>
  </div>
</div>
</script>

<script id="passenger_creator_template" type="text/x-handlebars-template">
<div class="passenger_input_area">
  <h2>Passengers</h2>
  <form class="form-horizontal" role="form">
  <input class="form-control" type="text" autofocus="true" name="passenger_name" id="passenger_name" placeholder="Passenger Name">
  <input class="form-control" type="text" name="contact_number" id="contact_number" placeholder="Contact Number">
  <input class="form-control" type="text" name="nationality" id="nationality" placeholder="Nationality">
  <input class="form-control" type="text" name="meal_pref" id="meal_pref" placeholder="Meal Preference">
  <input class="form-control btn btn-primary" type="submit" id="passenger_submit" value="Create Passenger"></br>
  </form>
</div>
<div id="passenger_viewer">
<table class="table">
<tr>
<th>Name</th>
<th>contact_number</th>
<th>Nationality</th>
<th>Meal Preference</th>
<th>id</th>
</tr>
{{#each passengers}}
<tr>
<td><button class="button btn btn-default passenger">{{this.name}}</button></td>
<td>{{this.contact_number}}</td>
<td>{{this.nationality}}</td>
<td>{{this.meal_pref}}</td>
<td class="pass_id">{{this.id}}</td>
</tr>
{{/each}}
</table>
</div>
</script>

<script type="text/x-handlebars-template" id="reservations_template">
<div class="reservation_input_area">
<h2>Reservations</h2>
  <div>
    <form>
      <input class="form-control form-inline" type="text" autofocus="true" name="origin_name" id="origin_name" placeholder="ORIGIN">
      <input type="text" class="form-control form-inline" name="destination_name" id="destination_name" placeholder="DESTINATION"<br>
      <input type="submit" id="flight_query_submit" class="form-control btn btn-primary" value="SEARCH">
    </form>
  </div>
</div>
<div class="reservation_table">
</div>
<div class="reservation_flight_viewer">
<div class="break"></div>
  <table class="table table-striped">
    <thead>
    <tr>
    <th>call_sign</th>
    <th>origin</th>
    <th>destination</th>
    <th>plane type</th>
    <th>date_departs</th>
    <th>time_departs</th>
    <th class="hidden">seats_available</th>
    <th class="hidden">ID</th>
    </tr>
    </thead>
    <tbody>
    </tbody>
  </table>
</div>
<div id="flight_layout"></div>
<div class="seating"></div>
</script>
<!-- show matching flights in table -->
<script type="text/x-handlebars-template" id="matching_flights_template">
{{#each this}}
<tr class="matchbox20">
<td><button class="btn btn-default flight">{{this.call_sign}}</button></td>
<td>{{this.origin}}</td>
<td>{{this.destination}}</td>
<td>{{this.plane.name}}</td>
<td>{{this.date_departed}}</td>
<td>{{this.time_departed}}</td>
<td class="hidden seats_avail">{{this.seats_free}}</td>
<td class="hidden id_value">{{this.id}}</td>
</tr>
{{else}}
<tr>
<td class="noresults"colspan=7>NO RESULTS FOUND</td>
</tr>
{{/each}}
</script>