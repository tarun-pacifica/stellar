</header>
<div id="main"></div>
<script id="plane_creator" type="text/x-handlebars-template">
  <div id="plane_table">
    <div>
      <h1>Plane Creator</h1>
      <h2 id="plane_name">Name?</h2>
    </div>
    <div id="plane_viewer">
      <table>
        <tr>
          <th>NAME</th>
          <th>ROWs</th>
          <th>AISLEs</th>
          <th>SEATS</th>
        </tr>
      {{#each planes}}
        <tr>
          <td>{{this.name}}</td>
          <td>{{this.rows}}</td>
          <td>{{this.aisles}}</td>
          <td>{{this.seats}}</td>
        </tr>
      {{/each}}
      </table>
    </div>
  </div>
  <div class="circle">
    <h2 id=>Aisles</h2>
    <h2 id="aival">1</h2>
  </div>
  <div class="circle">
    <h2>Rows</h2>
    <h2 id="rowval">0</h2>
  </div>
  <div>
    <form>
      <label>Name</label>
      <input name="name" id="name" type="text" autofocus="true"><br>
      <label>Rows</label>
      <input id="rows" name="rows" type="range".vertical min="0" max="40" value="25" step="5">
      <label>Aisles</label>
      <input id="aisles"name="aisles" type="range" min="1" max="3" value="1">
      <input type="submit" id="create" value="Create Plane"><br>
    </form>
    <div class="seating"></div>
  </div>
</script>

